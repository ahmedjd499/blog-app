{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "e2e": "cypress run",
    "e2e:open": "cypress open",
    "e2e:report": "cypress run && npm run merge:reports && npm run generate:report",
    "merge:reports": "npx mochawesome-merge cypress/reports/mochawesome/mochawesome_*.json -o cypress/reports/mochawesome/report.json",
    "generate:report": "npx marge cypress/reports/mochawesome/report.json -f report -o cypress/reports/mochawesome"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^16.2.0",
    "@angular/common": "^16.2.0",
    "@angular/compiler": "^16.2.0",
    "@angular/core": "^16.2.0",
    "@angular/forms": "^16.2.0",
    "@angular/platform-browser": "^16.2.0",
    "@angular/platform-browser-dynamic": "^16.2.0",
    "@angular/router": "^16.2.0",
    "jwt-decode": "^4.0.0",
    "ngx-quill": "^22.0.0",
    "quill": "^1.3.7",
    "rxjs": "~7.8.0",
    "socket.io-client": "^4.8.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.13.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.16",
    "@angular/cli": "^16.2.16",
    "@angular/compiler-cli": "^16.2.0",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^24.10.0",
    "@types/quill": "^2.0.14",
    "autoprefixer": "^10.4.21",
    "cypress": "^15.6.0",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^4.4.1",
    "mochawesome-report-generator": "^6.3.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.3.0",
    "typescript": "~5.1.3"
  }
}
